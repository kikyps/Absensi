<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Location" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="Theme.Penggajian.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Penggajian.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Location.NoActionBar">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/purple_500</item>                   <!--header background-->
        <!--<item name="android:windowBackground">@color/colorPrimary</item>-->      <!--calendar background-->
        <!-- <item name="android:textColorPrimary">@color/colorPrimaryText</item>--> <!--days of the month-->
        <!-- <item name="android:textColorSecondary">@color/colorAccent</item>-->   <!--days of the week-->
    </style>

    <style name="VerifyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/box_input_text_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/purple_500</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <style name="Theme.Location.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Location.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>